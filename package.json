{
  "name": "ts-valid-mongodb",
  "version": "0.0.1",
  "description": "Simple starter for typescript projects",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "start": "node -r dotenv/config build/index.js",
    "prestart": "npm run build",
    "start:dev": "nodemon -r dotenv/config --exec ts-node src/index.ts",
    "start:dev:n18": "node --watch -r ts-node/register src/index.ts",
    "start:build": "node -r dotenv/config build/index.js",
    "build": "rimraf ./build && tsc --project tsconfig.build.json && cp package*.json ./build",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest --detectOpenHandles --runInBand --forceExit --passWithNoTests",
    "test:watch": "npm test -- --watchAll --runInBand",
    "coverage": "npm test -- --coverage --no-cache --detectOpenHandles",
    "coverage:watch": "npm run coverage -- --forceExit --watch",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eljou/ts-valid-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/eljou/ts-valid-mongodb/issues"
  },
  "homepage": "https://github.com/eljou/ts-valid-mongodb#readme",
  "keywords": [
    "typescript",
    "mongodb",
    "mongoose",
    "ts",
    "zod",
    "schema",
    "model"
  ],
  "author": "Ernesto Fuentes GÃ³mez",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^6.2.0",
    "inflection": "^2.0.1",
    "mongodb": "^5.0.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.1",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.19",
    "np": "^7.6.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "_moduleAliases": {
    "@src": "build"
  }
}
